{
  "name": "resume-mobile",
  "version": "1.0.0",
  "description": "Mobile wrapper for the Resume Builder web app (Capacitor-ready)",
  "scripts": {
    "start": "npx live-server www --port=8100",
    "build:web": "echo 'Build step: copy/prepare assets (none required for this static app)'",
    "cap:init": "npx @capacitor/cli init resume-mobile com.example.resume --web-dir=www",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios"
  },
  "keywords": ["resume","mobile","capacitor","pwa"],
  "author": "",
  "license": "MIT",
  "devDependencies": {}
}
